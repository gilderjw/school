SimpleSwitchMorph subclass: #LOCell	instanceVariableNames: 'mouseAction bomb'	classVariableNames: ''	poolDictionaries: ''	category: 'PBE-LightsOut'!!LOCell methodsFor: 'accessing' stamp: 'jim 2/1/2017 11:42'!mouseAction: aBlock	^ mouseAction := aBlock! !!LOCell methodsFor: 'switching' stamp: 'jim 2/1/2017 13:31'!toggleState	self label == bomb		ifFalse: [ self label: bomb.			super toggleState ]! !!LOCell methodsFor: 'event handling' stamp: 'jim 2/1/2017 11:51'!mouseMove: anEvent! !!LOCell methodsFor: 'event handling' stamp: 'jim 2/1/2017 11:44'!mouseUp: anEvent	mouseAction value! !!LOCell methodsFor: 'initialization' stamp: 'jim 2/1/2017 13:30'!initialize	super initialize.	self label: ''.	self borderWidth: 2.	bounds := 0 @ 0 corner: 16 @ 16.	offColor := Color paleYellow.	onColor := Color paleBlue darker.	self useSquareCorners.	bomb := 'x'.	(0 to: 1) atRandom < 1		ifTrue: [ bomb := 'o' ].	self turnOff! !BorderedMorph subclass: #LOGame	instanceVariableNames: 'cells'	classVariableNames: ''	poolDictionaries: ''	category: 'PBE-LightsOut'!!LOGame methodsFor: 'initialization' stamp: 'jim 2/1/2017 11:25'!initialize	| sampleCell width height n |	super initialize.	n := self cellsPerSide.	sampleCell := LOCell new.	width := sampleCell width.	height := sampleCell height.	self bounds: (5 @ 5 extent: (width * n) @ (height * n) + (2 * self		borderWidth)).	cells := Matrix new: n tabulate: [ :i :j | self newCellAt: i at: j ]! !!LOGame methodsFor: 'initialization' stamp: 'jim 2/1/2017 11:49'!newCellAt: i at: j	"Create a cell for position (i,j) and add it to my on-screen	representation at the appropriate screen position. Answer the	new cell"	| c origin |	c := LOCell new.	origin := self innerBounds origin.	self addMorph: c.	c position: ((i - 1) * c width) @ ((j - 1) * c height) + origin.	c mouseAction: [ self toggleNeighboursOfCellAt: i at: j ].	^ c! !!LOGame methodsFor: 'as yet unclassified' stamp: 'jim 2/1/2017 11:27'!cellsPerSide	"The number of cells along each side of the game"	^ 10! !!LOGame methodsFor: 'logic' stamp: 'jim 2/1/2017 13:02'!toggleNeighboursOfCellAt: i at: j	(cells at: i at: j) toggleState."	i > 1		ifTrue: [ (cells at: i - 1 at: j) toggleState ].	i < self cellsPerSide		ifTrue: [ (cells at: i + 1 at: j) toggleState ].	j > 1		ifTrue: [ (cells at: i at: j - 1) toggleState ].	j < self cellsPerSide		ifTrue: [ (cells at: i at: j + 1) toggleState ] "! !